{
  "name": "traceforge",
  "displayName": "TraceForge",
  "description": "AI debugging and testing for LLM applications",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "publisher": "traceforge",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing",
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "llm",
    "testing",
    "debugging",
    "openai"
  ],
  "activationEvents": [
    "workspaceContains:**/.ai-tests/config.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "traceforge",
          "title": "TraceForge",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "traceforge": [
        {
          "id": "traceforge.traces",
          "name": "Traces"
        },
        {
          "id": "traceforge.tests",
          "name": "Tests"
        }
      ]
    },
    "commands": [
      {
        "command": "traceforge.refreshTraces",
        "title": "Refresh Traces",
        "icon": "$(refresh)"
      },
      {
        "command": "traceforge.viewTrace",
        "title": "View Trace Details"
      },
      {
        "command": "traceforge.createTestFromTrace",
        "title": "Create Test from Trace",
        "icon": "$(add)"
      },
      {
        "command": "traceforge.refreshTests",
        "title": "Refresh Tests",
        "icon": "$(refresh)"
      },
      {
        "command": "traceforge.runTest",
        "title": "Run Test",
        "icon": "$(play)"
      },
      {
        "command": "traceforge.runAllTests",
        "title": "Run All Tests",
        "icon": "$(run-all)"
      },
      {
        "command": "traceforge.openTest",
        "title": "Open Test File"
      },
      {
        "command": "traceforge.startProxy",
        "title": "TraceForge: Start Proxy Server"
      },
      {
        "command": "traceforge.stopProxy",
        "title": "TraceForge: Stop Proxy Server"
      },
      {
        "command": "traceforge.startWeb",
        "title": "TraceForge: Start Web UI"
      },
      {
        "command": "traceforge.openDashboard",
        "title": "TraceForge: Open Dashboard"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "traceforge.refreshTraces",
          "when": "view == traceforge.traces",
          "group": "navigation"
        },
        {
          "command": "traceforge.refreshTests",
          "when": "view == traceforge.tests",
          "group": "navigation"
        },
        {
          "command": "traceforge.runAllTests",
          "when": "view == traceforge.tests",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "traceforge.viewTrace",
          "when": "view == traceforge.traces && viewItem == trace",
          "group": "inline"
        },
        {
          "command": "traceforge.createTestFromTrace",
          "when": "view == traceforge.traces && viewItem == trace",
          "group": "inline"
        },
        {
          "command": "traceforge.runTest",
          "when": "view == traceforge.tests && viewItem == test",
          "group": "inline"
        },
        {
          "command": "traceforge.openTest",
          "when": "view == traceforge.tests && viewItem == test"
        }
      ]
    },
    "languages": [
      {
        "id": "yaml",
        "extensions": [".yaml", ".yml"],
        "filenames": [],
        "aliases": ["YAML", "yaml"]
      }
    ],
    "grammars": [],
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/test-snippets.json"
      }
    ],
    "configuration": {
      "title": "TraceForge",
      "properties": {
        "traceforge.proxyPort": {
          "type": "number",
          "default": 8787,
          "description": "Port for the TraceForge proxy server"
        },
        "traceforge.webPort": {
          "type": "number",
          "default": 3001,
          "description": "Port for the TraceForge web UI"
        },
        "traceforge.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh traces and tests"
        },
        "traceforge.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  }
}
