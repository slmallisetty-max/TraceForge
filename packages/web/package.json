{
  "name": "@traceforge/web",
  "version": "0.1.0",
  "description": "Web UI for TraceForge",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,ui -c blue,green \"pnpm:dev:server\" \"pnpm:dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "build": "pnpm build:server && pnpm build:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "vite build",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src server --ext ts,tsx"
  },
  "dependencies": {
    "@fastify/auth": "^4.6.1",
    "@fastify/cors": "^8.4.2",
    "@fastify/jwt": "^8.0.1",
    "@fastify/static": "^6.12.0",
    "@traceforge/shared": "workspace:*",
    "@types/uuid": "^11.0.0",
    "better-sqlite3": "^12.5.0",
    "fastify": "^4.25.2",
    "pino-pretty": "^13.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.7",
    "vitest": "^1.0.4"
  }
}
