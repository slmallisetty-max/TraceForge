{
  "name": "@traceforge/proxy",
  "version": "0.1.0",
  "description": "Local LLM proxy server for TraceForge",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch & node --watch dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@traceforge/shared": "workspace:*",
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.4.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0"
  }
}
