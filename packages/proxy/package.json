{
  "name": "@traceforge/proxy",
  "version": "0.1.0",
  "description": "Local LLM proxy server for TraceForge",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@traceforge/shared": "workspace:*",
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.4.2",
    "@fastify/rate-limit": "^9.1.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0"
  }
}
