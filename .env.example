# TraceForge Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# Required: At least one AI provider API key
# ===========================================

# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================================
# Optional: Additional AI Providers
# ===========================================

# Anthropic (Claude 3)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google (Gemini)
# GEMINI_API_KEY=your-gemini-key-here

# Ollama runs locally - no key needed
# Just ensure Ollama is running: ollama serve

# ===========================================
# Optional: Custom Ports
# ===========================================

# Proxy server port (default: 8787)
# PROXY_PORT=8787

# Web server port (default: 3001)
# PORT=3001

# ===========================================
# Optional: Advanced Configuration
# ===========================================

# Environment mode (development or production)
# NODE_ENV=development

# Log level (debug, info, warn, error)
# LOG_LEVEL=info

# Enable CORS (true or false)
# ENABLE_CORS=true

# ===========================================
# Authentication (v0.2.0+)
# ===========================================

# Enable/disable authentication (default: true)
# WARNING: Never disable in production!
TRACEFORGE_AUTH_ENABLED=true

# API Key for simple authentication (recommended for CI/CD)
# Generate with: openssl rand -hex 32
TRACEFORGE_API_KEY=your-secure-api-key-here

# JWT-based authentication (recommended for web UI)
TRACEFORGE_JWT_SECRET=your-jwt-secret-here
TRACEFORGE_USERNAME=admin
TRACEFORGE_PASSWORD=changeme

# ===========================================
# Retention Policy (v0.2.0+)
# ===========================================

# Enable automatic trace cleanup (default: true)
TRACEFORGE_RETENTION_ENABLED=true

# Delete traces older than N days (optional)
TRACEFORGE_MAX_TRACE_AGE_DAYS=7

# Keep only newest N traces (optional)
TRACEFORGE_MAX_TRACE_COUNT=10000

# Cleanup check interval in seconds (default: 21600 = 6 hours)
TRACEFORGE_CLEANUP_INTERVAL=21600

# ===========================================

# Storage Backend (v0.3.0+)
# ===========================================

# Storage type: file or sqlite (default: file)
TRACEFORGE_STORAGE_BACKEND=file

# SQLite database path (only used if STORAGE_BACKEND=sqlite)
TRACEFORGE_SQLITE_PATH=.ai-tests/traces.db

# ===========================================
# Embedding Provider (v0.4.0+)
# ===========================================

# Embedding provider for semantic assertions: openai or ollama (default: openai)
TRACEFORGE_EMBEDDING_PROVIDER=openai

# Model to use (default: text-embedding-3-small for OpenAI, nomic-embed-text for Ollama)
TRACEFORGE_EMBEDDING_MODEL=text-embedding-3-small

# Base URL for Ollama (only used if EMBEDDING_PROVIDER=ollama)
TRACEFORGE_EMBEDDING_BASE_URL=http://localhost:11434

# Enable embedding cache for deterministic CI runs (default: true)
TRACEFORGE_EMBEDDING_CACHE=true

# Cache directory path (default: .ai-tests/embeddings-cache)
TRACEFORGE_EMBEDDING_CACHE_PATH=.ai-tests/embeddings-cache

# ===========================================
# Quick Start
# ===========================================
# 1. Copy this file: cp .env.example .env
# 2. Add your OPENAI_API_KEY
# 3. Run: npx pnpm dev
# 4. Open: http://localhost:5173

