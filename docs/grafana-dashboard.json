{
  "dashboard": {
    "title": "TraceForge Observability Dashboard",
    "description": "Comprehensive monitoring dashboard for TraceForge proxy and API servers",
    "tags": ["traceforge", "llm", "vcr", "monitoring"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}} - {{status_code}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "yaxes": [
          { "label": "requests/sec", "format": "reqps" },
          { "show": false }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_request_errors_total[5m])",
            "legendFormat": "{{method}} {{route}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "yaxes": [
          { "label": "errors/sec", "format": "reqps" },
          { "show": false }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": { "type": "gt", "params": [10] },
              "query": { "params": ["A", "5m", "now"] }
            }
          ],
          "frequency": "1m",
          "message": "Error rate exceeded 10 errors/sec"
        }
      },
      {
        "id": 3,
        "title": "Request Latency (P50, P95, P99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "yaxes": [
          { "label": "duration", "format": "s" },
          { "show": false }
        ]
      },
      {
        "id": 4,
        "title": "LLM Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(llm_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{provider}} - {{model}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "yaxes": [
          { "label": "duration", "format": "s" },
          { "show": false }
        ]
      },
      {
        "id": 5,
        "title": "Token Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(llm_request_tokens_sum[5m])",
            "legendFormat": "{{provider}} - {{model}} ({{token_type}})",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "yaxes": [
          { "label": "tokens/sec", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 6,
        "title": "VCR Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(rate(vcr_cassette_reads_total[5m]) / (rate(vcr_cassette_reads_total[5m]) + rate(vcr_cache_misses_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 },
        "options": {
          "graphMode": "none",
          "textMode": "value_and_name",
          "colorMode": "value",
          "unit": "percent"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "value": 0, "color": "red" },
            { "value": 70, "color": "yellow" },
            { "value": 90, "color": "green" }
          ]
        }
      },
      {
        "id": 7,
        "title": "Database Query Duration (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - {{table}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "yaxes": [
          { "label": "duration", "format": "s" },
          { "show": false }
        ]
      },
      {
        "id": 8,
        "title": "Active Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "db_connections_active",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 24 },
        "yaxes": [
          { "label": "connections", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "nodejs_memory_usage_bytes",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
        "yaxes": [
          { "label": "bytes", "format": "bytes" },
          { "show": false }
        ]
      },
      {
        "id": 10,
        "title": "Total Traces Stored",
        "type": "stat",
        "targets": [
          {
            "expr": "traces_total",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 32 },
        "options": {
          "graphMode": "area",
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 11,
        "title": "Storage Space Used",
        "type": "graph",
        "targets": [
          {
            "expr": "storage_space_used_bytes",
            "legendFormat": "{{storage_type}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 40 },
        "yaxes": [
          { "label": "bytes", "format": "bytes" },
          { "show": false }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
