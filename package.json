{
  "name": "traceforge",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first AI debugging platform",
  "keywords": ["ai", "debugging", "llm", "openai", "testing"],
  "author": "TraceForge Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n proxy,web -c cyan,magenta \"pnpm --filter @traceforge/proxy dev\" \"pnpm --filter @traceforge/web dev\"",
    "start": "concurrently -n proxy,web -c cyan,magenta \"pnpm --filter @traceforge/proxy start\" \"pnpm --filter @traceforge/web start\"",
    "build": "pnpm -r build",
    "test:demo": "node examples/demo-app/index.js",
    "test:integration": "powershell -File test-integration.ps1",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
