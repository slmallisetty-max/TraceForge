{
  "name": "traceforge",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "If your AI output changes, your build will fail. Proprietary software.",
  "author": "TraceForge Team",
  "scripts": {
    "dev": "pnpm --filter @traceforge/proxy dev",
    "start": "pnpm --filter @traceforge/proxy start",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "prepare": "husky install",
    "traceforge": "node packages/cli/dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "packages/**/*.{js,jsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "**/.ai-tests/cassettes/**": [
      "echo Warning: You are committing snapshot files. Review for sensitive data! && exit 1"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
